{
  "compilerOptions": {
    "target": "ES2021",
    "rootDir": ".",
    "outDir": "./dist/",
    "module": "CommonJS",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "types": ["jest"],
    "lib": ["ES2021"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "./dist/**"]
}
